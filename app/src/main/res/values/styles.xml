<resources>

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>

        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    </style>

    <style name="AppThemeSplash"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme.NoActionBar"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="PrimaryButton"
        parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="SecundaryButton"
        parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_300</item>
        <item name="colorControlActivated">@color/grey_300</item>
        <item name="colorControlHighlight">@color/grey_300</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="DeleteButton"
        parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/red_700</item>
        <item name="colorControlActivated">@color/red_700</item>
        <item name="colorControlHighlight">@color/red_700</item>
        <item name="colorButtonNormal">@color/red_500</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog"
        parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme.Dialog.Alert"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="DefaultTextViewStyle"
        parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TitleTextViewStyle"
        parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SubtitleTextViewStyle"
        parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="toolbar_style">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="EditTextStyle"
        parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="panelBackground">@color/white</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">180</item>
    </style>

    <style name="ListItemTitleStyle"
        parent="TitleTextViewStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpinnerStyle"
        parent="Base.Widget.AppCompat.Spinner">

    </style>

    <style name="ListHeaderStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
